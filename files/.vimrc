" GENERAL
syntax enable
set number

" TABS
set tabstop=2                 " tabs looks like N spaces when editing
set softtabstop=2             " tabs looks like N spaces when reading
set expandtab                 " treat tabs as space
set shiftwidth=2              " N spaces created when shift hitted 

" UI
set cursorline                " show current line
set showmatch                 " highlight matching

" Searching
set incsearch                 " search as characters are entered
set hlsearch                  " highlight matches
set ignorecase                " search case insensitive
